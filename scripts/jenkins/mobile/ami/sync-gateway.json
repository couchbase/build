{
    "variables": {
    },
    "provisioners": [
	{
	    "type": "shell",
	    "inline": [
		"sudo pip install ansible"
	    ]
	},
	{
	    "type": "ansible-local",
	    "playbook_file": "./install-sync-gateway-playbook.yml",
	    "extra_arguments": [ "--extra-vars", "\"couchbase_sync_gateway_package_base_url={{user `couchbase_sync_gateway_package_base_url`}} couchbase_sync_gateway_package={{user `couchbase_sync_gateway_package`}}\"" ]
	},
	{
	    "type": "shell",
	    "inline": [
		"rm /home/ec2-user/.ssh/authorized_keys",
		"sudo rm /root/.ssh/authorized_keys"
	    ]
	}	
  ],
  "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "force_deregister": true,
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "Couchbase Sync Gateway {{user `sync_gateway_edition`}} {{user `couchbase_sync_gateway_version`}} {{user `base_ami_name`}}",
      "ami_groups": "all"
  }]
}
